import * as Yup from "yup";
import { {{name}} } from "../models";

export const {{name}}Validator = Yup.object<{{name}}>({
{{#each properties}}
    {{name}}: Yup.{{type}}()
    {{#if required}}
        .required()
    {{/if}}
    {{#if nullable}}
        .nullable(true)
    {{/if}}
    {{#if max}}
        .max({{max}})
    {{/if}}
    {{#if min}}
        .min({{min}})
    {{/if}}
    {{#if integer}}
        .integer()
    {{/if}}
    {{#if enums}}
        .oneOf([
        {{#each enums}}
            {{this}}
        {{/each}}
        ])
    {{/if}}
    {{#if pattern}}
        .matches({{pattern}})
    {{/if}}
{{/each}}
});
