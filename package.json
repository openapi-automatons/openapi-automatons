{
  "name": "openapi-automatons",
  "version": "1.0.236",
  "repository": "git@github.com:openapi-automatons/openapi-automatons.git",
  "author": "tanmen <yt.prog@gmail.com>",
  "license": "MIT",
  "keywords": [
    "openapi"
  ],
  "main": "index.js",
  "bin": {
    "openapi-automatons": "cli.js"
  },
  "scripts": {
    "prebuild": "depcheck && node scripts/prebuild.js",
    "build": "tsc && cp package.json README.md LICENSE dist",
    "lint": "eslint src --ext .ts,.tsx",
    "test": "jest",
    "postinstall": "husky install && typesync && yarn check --integrity || yarn install --ignore-scripts && yarn-deduplicate",
    "prepublishOnly": "pinst --disable",
    "postpublish": "pinst --enable",
    "postversion": "cp package.json ../package.json"
  },
  "dependencies": {
    "@automatons/tools": "^1.0.174",
    "@automatons/validator": "^1.0.147",
    "chalk": "^5.1.2",
    "fs-extra": "^10.1.0",
    "ora": "6.1.2",
    "yup": "0.28.5"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "@semantic-release/changelog": "^6.0.0",
    "@semantic-release/git": "^10.0.0",
    "@semantic-release/npm": "^9.0.1",
    "@types/eslint": "^8.4.6",
    "@types/fs-extra": "^9.0.1",
    "@types/jest": "^27.0.2",
    "@types/js-yaml": "^4.0.5",
    "@types/jsonschema": "^1.1.1",
    "@types/node": "^18.11.2",
    "@types/semantic-release": "^17.2.4",
    "@types/yup": "0.28.3",
    "@typescript-eslint/eslint-plugin": "^5.40.1",
    "@typescript-eslint/parser": "^5.40.1",
    "depcheck": "^1.4.3",
    "eslint": "^8.25.0",
    "eslint-config-google": "^0.14.0",
    "husky": "^8.0.1",
    "jest": "^26.0.1",
    "lint-staged": "^13.0.3",
    "pinst": "^3.0.0",
    "semantic-release": "^19.0.5",
    "ts-jest": "^26.0.0",
    "typescript": "^4.5.2",
    "typesync": "^0.9.2",
    "yarn-deduplicate": "^6.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
