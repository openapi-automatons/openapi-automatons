{
  "name": "openapi-automatons",
  "version": "1.0.31",
  "repository": "git@github.com:openapi-automatons/openapi-automatons.git",
  "author": "tanmen <yt.prog@gmail.com>",
  "license": "MIT",
  "type": "module",
  "keywords": [
    "openapi"
  ],
  "main": "index.js",
  "bin": {
    "openapi-automatons": "cli.js"
  },
  "scripts": {
    "prebuild": "depcheck && node scripts/prebuild.js",
    "build": "tsc && cp package.json README.md LICENSE dist",
    "lint": "eslint src --ext .ts,.tsx",
    "test": "jest",
    "postinstall": "husky install && typesync && yarn check --integrity || yarn install --ignore-scripts && yarn-deduplicate",
    "prepublishOnly": "pinst --disable",
    "postpublish": "pinst --enable",
    "postversion": "cp package.json ../package.json"
  },
  "dependencies": {
    "@automatons/tools": "^1.0.20",
    "@automatons/validator": "^1.0.5",
    "chalk": "^4.1.2",
    "fs-extra": "^10.0.0",
    "ora": "^6.0.1",
    "yup": "0.28.5"
  },
  "devDependencies": {
    "@commitlint/cli": "^15.0.0",
    "@commitlint/config-conventional": "^15.0.0",
    "@semantic-release/changelog": "^6.0.0",
    "@semantic-release/git": "^10.0.0",
    "@semantic-release/npm": "^8.0.0",
    "@types/fs-extra": "^9.0.1",
    "@types/jest": "^27.0.2",
    "@types/js-yaml": "^4.0.4",
    "@types/jsonschema": "^1.1.1",
    "@types/node": "^16.11.9",
    "@types/semantic-release": "^17.2.3",
    "@types/yup": "0.28.3",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "depcheck": "^1.4.2",
    "eslint-config-google": "^0.14.0",
    "husky": "^7.0.4",
    "jest": "^26.0.1",
    "lint-staged": "^12.0.3",
    "pinst": "^2.1.6",
    "semantic-release": "^18.0.0",
    "ts-jest": "^26.0.0",
    "typescript": "^4.6.0-dev.20211229",
    "typesync": "^0.8.0",
    "yarn-deduplicate": "^3.1.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
